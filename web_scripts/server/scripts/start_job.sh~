#!/bin/sh

set -x

# =============================================================================
# Scripts Variables
# =============================================================================

export declare -a jobsPIDs
export declare -a jobsNames
export declare -i globalIndex=0
export bufferName=""

# =============================================================================
# Script Functions
# =============================================================================

startJob () {
    command=$1

    jobsNames[$globalIndex]=$command
    $command > $name.log 2>&1 &
    jobsPIDs[$globalIndex]=$!

    globalIndex=$(expr $globalIndex + 1)
}


# =============================================================================
# Script Main
# =============================================================================

startjob $1

# End of File
